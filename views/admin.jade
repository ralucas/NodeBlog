extends header

block content
	.container.form-container
		h1.blog-post-form-header Enter a Blog Post
		form#blog-post-form.row.col-xs-8.col-xs-offset-2.form-horizontal(role="form" method="post" action="/blog-post" enctype="application/json")
			.form-group
				label(for="author") Author:
				input.form-control(type="text" placeholder="Your Name" name="author")
			.form-group	
				label(for="title") Title:
				input.form-control(type="text" placeholder="Blog Post Title" name="title" data-name="title")
			.form-group
				label(for="post") Post:
				textarea.form-control(rows="20" placeholder="Enter your blog post here" name="post")
			.form-group
				button.btn.btn-primary.btn-lg.pull-right#btn-publish(type="submit") Publish Post
			.alert.alert-success.hidden#publish-success Your post has been published   
				a.alert-link.pull-right(href="/") Click here to view your newly posted blog post