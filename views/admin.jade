extends header

block content
	.container
		h1.blog-post-form-header Enter a Blog Post
		form#blog-post-form.form-horizontal(role="form")
			.form-group
				label(for="author") Author:
				input.form-control(type="text" placeholder="Your Name" name="author")
			.form-group	
				label(for="blogPostTitle") Title:
				input.form-control(type="text" placeholder="Blog Post Title" name="blogPostTitle")
			.form-group
				label(for="blogPostText") Post:
				textarea.form-control(rows="20" placeholder="Enter your blog post here" name="blogPostText")
			.form-group
				button.btn.btn-default.btn-lg#btn-draft(type="submit") Save as Draft
				button.btn.btn-primary.btn-lg.pull-right#btn-publish(type="submit") Publish Post
			.alert.alert-success.hidden#publish-success Your post has been published   
				a.alert-link.pull-right(href="/") Click here to view your newly posted blog post
	include footer