extends header

block content
	.container
		form#blog-post-form(role="form")
			.input-group.input-group-lg
				input.form-control(type="text" placeholder="Your Name" name="author")
				input.form-control(type="text" placeholder="Blog Post Title" name="blogPostTitle")
				textarea.form-control(rows="3" name="blogPostText")
			button.btn.btn-default.btn-lg#btn-draft(type="submit") Save as Draft
			button.btn.btn-primary.btn-lg#btn-publish(type="submit") Publish Post

	include footer